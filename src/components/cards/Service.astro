---
import Paragraph from '../shared/Paragraph.astro';

export interface Props {
    title: string,
    description: string,
    icon: string
}

const { title, description, icon } = Astro.props;
---

<div class="service-card">
    <div class="card-content p-5 sm:p-6 lg:p-8 rounded-3xl bg-box-bg shadow-lg shadow-box-shadow relative overflow-hidden cursor-pointer transition-all duration-300 hover:shadow-xl">
        <div class="border-frame"></div>
        
        <div class="flex flex-col items-center justify-center text-center h-full gap-4">
            <div class="rounded-xl bg-gray-300 dark:bg-gray-950 p-3 text-heading-1 w-max">
                <slot set:html={icon} />
            </div>
            <h2 class="text-lg md:text-xl font-semibold text-heading-2">
                {title}
            </h2>
        </div>
        
        <div class="description-overlay opacity-0 hover:opacity-100 absolute inset-0 bg-box-bg/95 transition-all duration-300 p-6 flex flex-col justify-center">
            <div class="transform translate-y-4 hover:translate-y-0 transition-transform duration-300">
                <h3 class="text-lg font-semibold text-heading-2 mb-3">{title}</h3>
                <Paragraph>
                    {description}
                </Paragraph>
            </div>
        </div>
    </div>
</div>

<style>
    .service-card {
        height: 400px;
        position: relative;
    }

    .card-content {
        height: 100%;
        display: flex;
        flex-direction: column;
        position: relative;
    }

    .border-frame {
        position: absolute;
        inset: 0;
        pointer-events: none;
        border: 1px solid transparent;
        border-image: linear-gradient(
            to bottom,
            transparent 0%,
            transparent 5%,
            #e5e7eb 50%,
            #e5e7eb 100%
        ) 1 100%;
    }

    .description-overlay {
        pointer-events: none;
        backdrop-filter: blur(4px);
    }

    .service-card:hover .description-overlay {
        pointer-events: auto;
    }

    .description-overlay {
        overflow-y: auto;
        -ms-overflow-style: none;
        scrollbar-width: none;
    }

    .description-overlay::-webkit-scrollbar {
        display: none;
    }
</style>