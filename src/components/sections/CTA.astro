---
import Button from "../shared/Button.astro";
import Paragraph from "../shared/Paragraph.astro";
import ContactForm from "../../forms/ContactForm.astro";
---

<section id="cta" class="pb-20 relative">
  <!-- Gradient shapes -->
  <div class="absolute right-0 top-0 h-full w-full flex justify-end pointer-events-none">
    <div class="w-28 h-28 overflow-auto flex rounded-xl relative blur-2xl">
      <span
        class="absolute w-16 h-16 -top-1 -right-1 bg-green-500 rounded-md rotate-45"
      ></span>
      <span
        class="absolute w-16 h-16 -bottom-1 -right-1 bg-[#FCDC58] rounded-md rotate-45"
      ></span>
      <span
        class="absolute w-16 h-16 -bottom-1 -left-1 bg-primary rounded-md rotate-45"
      ></span>
    </div>
  </div>

  <div class="absolute left-0 bottom-0 h-full w-full flex items-end pointer-events-none">
    <div class="w-28 h-28 overflow-auto flex rounded-xl relative blur-2xl">
      <span
        class="absolute w-16 h-16 -top-1 -right-1 bg-green-500 rounded-md rotate-45"
      ></span>
      <span
        class="absolute w-16 h-16 -bottom-1 -right-1 bg-[#FCDC58] rounded-md rotate-45"
      ></span>
      <span
        class="absolute w-16 h-16 -bottom-1 -left-1 bg-primary rounded-md rotate-45"
      ></span>
    </div>
  </div>

  <div
    class="w-full max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative py-8 md:py-10 rounded-2xl bg-gradient-to-tr from-gray-100 to-gray-200 dark:from-gray-900"
  >
    <div class="mx-auto text-center max-w-xl md:max-w-2xl relative">
      <h1
        class="text-3xl/tight sm:text-4xl/tight md:text-5xl/tight
        font-bold text-heading-1"
      >
        Quick Start your <span class="text-transparent bg-clip-text bg-gradient-to-br from-indigo-600 from-20% via-primary via-30% to-green-600">Strategic Digital</span> Marketing Campaing
      </h1>
      <Paragraph className={"pt-10"}>
        We’re here to help you connect with top influencers, grow your affiliate program, and take your brand to the next level. Let’s make impactful partnerships happen!
      </Paragraph>
      <div class="mx-auto max-w-md sm:max-w-xl pt-10">
        <ContactForm />
      </div>
    </div>
  </div>
 
</section>